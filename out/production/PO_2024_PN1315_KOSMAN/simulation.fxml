<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <TextField fx:id="movesField"/>
    </top>
    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="center"/>
    </center>
    <bottom>
        <BorderPane>
            <center>
                <Label fx:id="infoLabel" text="All animals will be living here!" textAlignment="center"/>
            </center>
            <right>
                <Button fx:id="startButton" text="Start" textAlignment="center" onAction="#onSimulationStartClicked"/>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
